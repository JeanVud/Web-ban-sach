@using PagedList.Mvc;
@using PagedList;
@model PagedList.PagedList<WebBanSach.Models.ChuDe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}


<p>
    @Html.ActionLink("Thêm Mới Chủ Đề", "ThemMoi")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().MaChuDe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().TenChuDe)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaChuDe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenChuDe)
            </td>
            <td>
                @Html.ActionLink("Chỉnh Sửa", "ChinhSua", new { @MaChuDe = item.MaChuDe }) |
                @Html.ActionLink("Hiển Thị", "HienThi", new { @MaChuDe = item.MaChuDe }) |
                @Html.ActionLink("Xóa", "Xoa", new { @MaChuDe = item.MaChuDe })
            </td>
        </tr>
    }

</table>
@* Tạo link liên kết các trang*@
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>
<style>
    .MenuTrang li {
        display: inline;
    }
</style>